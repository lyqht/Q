<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
            android:id="@+id/newQueueView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            />

            <TextView
            android:id="@+id/newQueue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="1) Tap the create queue button."/>
            <TextView
            android:id="@+id/newQueue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newQueue1"
            android:textSize="20sp"
            android:text="2) Fill the queue's info and set the settings"/>

            <TextView
            android:id="@+id/newQueue3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newQueue2"
            android:textSize="20sp"
            android:text="3) Tap the CREATE QUEUE! to create queue"/>

        <TextView
            android:id="@+id/newQueue4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newQueue3"
            android:textSize="20sp"
            android:text="4) Done!!"/>
    </LinearLayout>
</ScrollView>