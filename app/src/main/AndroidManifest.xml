<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gcsenxmk.q">

    <!-- Allow internet usage -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Intro, Login & Registration Activities -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Intro"
            android:label="Welcome Page!" />
        <activity
            android:name=".SignupActivity"
            android:label="Sign Up here"
            android:parentActivityName=".LoginActivity"></activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:parentActivityName=".Intro"></activity>
      
        <activity android:name=".Init_SelAccType" />
        <activity android:name=".Init_MercAccCreation" />
        <activity android:name=".Init_CustAccCreation" />
        <activity android:name=".Init_AccCreated" />

        <!-- Cust Activities -->
        <activity
            android:name=".Cust_Gallery"
            android:label="Stall Description" />
        <activity android:name=".Cust_MainActivity">
        </activity>

        <activity android:name=".Cust_HelpPage" />
        <activity android:name=".TEMP_Cust_GettingStarted" />

        <!-- Merchant Activities -->
        <activity android:name=".TEMP_Merc_GettingStarted" />

        <activity android:name=".Merc_MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Merc_Gallery" />
        <activity
            android:name=".Merc_HelpPage"
            android:label="Help Page(Merchant)">
        </activity>
        <activity
            android:name=".Merc_QueueInfo"
            android:label="Queue Information" />
        <activity
            android:name=".Merc_QueueSettingsAndEdit"
            android:label="Queue Configuration" />
        <activity
            android:name=".Merc_AccInfoSettings"
            android:label="Account Settings" />

        <activity android:name=".MercCreateQueue"
            android:label="Create a Queue"></activity>

    </application>

</manifest>